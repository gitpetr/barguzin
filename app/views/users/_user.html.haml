%tbody
  -if user.block?
    %tr.blocked
      %td.td-18.td-right= @row_index += 1
      %td.td-18= link_to icon('fa-edit', 'редактировать'), edit_user_path(user)
      %td.td-18.td-right= user.id
      %td.my-line-through
        = link_to user.username, user_path(user)
      %td.td-18.my-line-through= link_to user.email, user_path(user)
      %td.td-18= link_to icon('fa-trash', 'удалить'), user_path(user), method: :delete, data: {confirm: 'Действительно удалить?'}
      %td.td-18= link_to icon('fa-toggle-on', 'разблокировать'), unblock_user_path(user), method: 'put', class: 'block'

  - else
    %tr
      %td.td-18.td-right= @row_index += 1
      %td.td-18= link_to icon('fa-edit', 'редактировать'), edit_user_path(user)
      %td.td-18.td-right= user.id
      %td= link_to user.username, user_path(user)
      %td.td-18= link_to user.email, user_path(user)
      %td.td-18= link_to icon('fa-trash', 'удалить'), user_path(user), method: :delete, data: {confirm: 'Действительно удалить?'}
      %td.td-18= link_to icon('fa-toggle-on block', 'заблокировать'), block_user_path(user), method: 'put', class: 'block'

