- if user_signed_in?
  .btn-group.navbar-btn.navbar-right
    = button_tag class: 'dropdown-toggle btn btn-default', 'data-toggle': 'dropdown' do
      = icon('fa-user')
      = current_user.username
      %span.caret
    %ul.dropdown-menu
      %li= link_to 'Профиль', profile_user_path(current_user.id)
      %li= link_to 'Выйти', destroy_user_session_path, method: :delete
- else
  = link_to 'Вход', new_user_session_path, class: 'btn btn-default navbar-btn navbar-right'
  = link_to 'Регистрация', new_user_registration_path, class: 'btn btn-info navbar-btn navbar-right'